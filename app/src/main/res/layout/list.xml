<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/backgrnd">

    <TextView
        android:id="@+id/text_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="18dp"
        android:text="57"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="20dp"

        android:textStyle="italic" />

    <TextView
        android:id="@+id/text_name"
        android:layout_below="@+id/text_number"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="smith north"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />

    <TextView
        android:id="@+id/text_address"
        android:layout_below="@+id/text_name"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nrt"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />

    <TextView
        android:id="@+id/text_positionLat"
        android:layout_below="@+id/text_address"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />

    <TextView
        android:id="@+id/text_positionLng"
        android:layout_below="@+id/text_positionLat"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
    />


    <TextView
        android:id="@+id/text_banking"
        android:layout_below="@+id/text_positionLng"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="true"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />

    <TextView
        android:id="@+id/text_bonus"
        android:layout_below="@+id/text_banking"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="abc"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />

    <TextView
        android:id="@+id/text_status"
        android:layout_below="@+id/text_bonus"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="south"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />

    <TextView
        android:id="@+id/text_contract_name"
        android:layout_below="@+id/text_status"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="north"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />


    <TextView
        android:id="@+id/text_bike_stands"
        android:layout_below="@+id/text_contract_name"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />


    <TextView
        android:id="@+id/text_available_bike_stands"
        android:layout_below="@+id/text_bike_stands"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />
    <TextView
        android:id="@+id/text_available_bikes"
        android:layout_below="@+id/text_available_bike_stands"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />
    <TextView
        android:id="@+id/text_last_update"
        android:layout_below="@+id/text_available_bikes"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12345"
        android:paddingLeft="18dp"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic"/>
        />

</RelativeLayout>